@page
@model inventory.Pages.Admin.Asset.EditaModel
@{
}
<h2 class="my-3">Edit Asset </h2>

@if (Model.ErrorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.ErrorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
else if (Model.SuccessMessage.Length > 0)
{
    <div class='alert alert-success alert-dismissible fade show' role='alert'>
        <strong>@Model.SuccessMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="AssetTag"></label>
        <div class="col-sm-8">
            <input readonly class="form-control-plaintext" asp-for="AssetTag">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="AssetName"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="AssetName">
            <span asp-validation-for="AssetName" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="AssetType"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="AssetType">
            <span asp-validation-for="AssetType" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="AssetSerialNumber"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="AssetSerialNumber">
            <span asp-validation-for="AssetSerialNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="Manufacturer"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Manufacturer">
            <span asp-validation-for="Manufacturer" class="text-danger"></span>
        </div>
    </div>
    

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Admin/Asset/Indexa" role="button">Cancel</a>
        </div>
    </div>
</form>


