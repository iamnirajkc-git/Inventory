@page
@model inventory.Pages.Admin.Room.EditrModel
@{
}
<h2 class="my-3">Edit Room </h2>

@if (Model.ErrorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.ErrorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
else if (Model.SuccessMessage.Length > 0)
{
    <div class='alert alert-success alert-dismissible fade show' role='alert'>
        <strong>@Model.SuccessMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="Room_id"></label>
        <div class="col-sm-8">
            <input readonly   class="form-control-plaintext" asp-for="Room_id">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="RoomNumber"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="RoomNumber">
            <span asp-validation-for="RoomNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="BuildingName"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="BuildingName">
            <span asp-validation-for="BuildingName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="FloorNumber"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="FloorNumber">
            <span asp-validation-for="FloorNumber" class="text-danger"></span>
        </div>
    </div>
  

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Admin/Room/Indexr" role="button">Cancel</a>
        </div>
    </div>
</form>
