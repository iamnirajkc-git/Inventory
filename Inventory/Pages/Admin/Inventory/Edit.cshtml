@page
@model inventory.Pages.Admin.Inventory.EditModel
@{
}
<h2 class="my-3">Edit Inventory </h2>

@if (Model.ErrorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.ErrorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}
else if (Model.SuccessMessage.Length > 0)
{
    <div class='alert alert-success alert-dismissible fade show' role='alert'>
        <strong>@Model.SuccessMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="InventoryID"></label>
        <div class="col-sm-8">
            <input readonly class="form-control-plaintext" asp-for="InventoryID">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="assetname"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="assetname">
            <span asp-validation-for="assetname" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="IssuedDepartment"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="IssuedDepartment">
            <span asp-validation-for="IssuedDepartment" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="AssetTag"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="AssetTag">
            <span asp-validation-for="AssetTag" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="CurrentOwner"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="CurrentOwner">
            <span asp-validation-for="CurrentOwner" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="PreviousOwner"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="PreviousOwner">
            <span asp-validation-for="PreviousOwner" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="DateIssued"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="DateIssued">
            <span asp-validation-for="DateIssued" class="text-danger"></span>
        </div>
    </div>
   
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="Issued_ID"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Issued_ID">
            <span asp-validation-for="Issued_ID" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="Status"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Status">
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="Notes"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="Notes">
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
    </div>

   
    <div class="row mb-3">
        <label class="col-sm-4 col-form-label" asp-for="IssuedRoom"></label>
        <div class="col-sm-8">
            <input class="form-control" asp-for="IssuedRoom">
            <span asp-validation-for="IssuedRoom" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Admin/Inventory/Index" role="button">Cancel</a>
        </div>
    </div>
</form>

 