@page
@model inventory.Pages.RoomModel
@{
}
<div class="row">
    <div class="col-lg-9 mx-auto p-3">
        <h3 class="mb-3 font-weight-normal text-center pb-4">Room Form</h3>

        @if (Model.ErrorMessage.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@Model.ErrorMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
        else if (Model.SuccessMessage.Length > 0)
        {
            <div class='alert alert-success alert-dismissible fade show' role='alert'>
                <strong>@Model.SuccessMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }


        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="Room_id"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Room_id">
                    <span asp-validation-for="Room_id" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="RoomNumber"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="RoomNumber">
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="BuildingName"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="BuildingName">
                    <span asp-validation-for="BuildingName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" asp-for="FloorNumber"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="FloorNumber">
                    <span asp-validation-for="FloorNumber" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="offset-sm-4" col-sm-8">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>

    </div>
</div>
